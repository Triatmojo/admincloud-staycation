  <!-- Main Footer -->
  <%- include('../../../partials/footer.ejs'); %>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->
 <%- include('show_modal_feature.ejs'); %>
 <%- include('show_modal_activity.ejs'); %>
 <%- include('../../../partials/js.ejs'); %>

 <script>
   $(document).ready(function() {
    $('#datatableActivity').DataTable();
    $('#datatableFeature').DataTable();
   });

   $('#datatableFeature').on('click', '.button-update' , function(){
     let id = $(this).data('id');
     let name = $(this).data('name');
     let qty = $(this).data('qty');
     $('#edit-modal-feature').modal('show');
     $('.id').val(id);
     $('.name').val(name);
     $('.qty').val(qty);
   });

   $('#datatableActivity').on('click', '.button-update', function(){
     let id = $(this).data('id');
     let name = $(this).data('name');
     let type = $(this).data('type');
     $('#edit-modal-activity').modal('show');
     $('.id').val(id);
     $('.name').val(name);
     $('.type').val(type);
   })
   CKEDITOR.replace('about');
 </script>
