    <!-- main content -->
    <div class="content">
      <div class="container-fluid">  
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-feature" role="tab" aria-controls="home" aria-selected="true">Show Feature</a>
