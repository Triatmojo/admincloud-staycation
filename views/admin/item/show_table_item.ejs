<%- include('../../partials/message.ejs'); %>
<div class="card shadow mt-2">
    <div class="card-body table-responsive">
         <table class="table table-striped" id="datatable">
            <thead>
                 <th>No</th>
                 <th>Title</th>
                 <th>Price</th>
                 <th>City</th>
                 <th>Country</th>
                 <th>Action</th>
            </thead>
            <tbody>
                 <% for(i = 0; i < item.length; i++) { %>
                    <tr>
                         <td><%= i + 1 %></td>
                         <td><%= item[i].title %></td>
                         <td>$<%= item[i].price %></td>
                         <td><%= item[i].city %></td>
                         <td><%= item[i].country %></td>
                         <td>
                              <form action="/admin/item/<%= item[i].id %>/delete?_method=DELETE" method="POST">
                                   <a href="/admin/item/show-image/<%= item[i].id %>" class="btn btn-sm btn-outline-info"><i class="fas fa-image"></i></a>
                                   <a href="/admin/item/<%= item[i].id %>" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
                                   <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                   <a href="/admin/item/show-detail-item/<%= item[i].id %>" class="btn btn-sm btn-outline-success"><i class="fas fa-plus"></i></a>
                              </form>
                         </td>
                    </tr>
                 <% } %>
            </tbody>
         </table>
    </div>
</div>
   