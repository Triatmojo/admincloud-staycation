<%- include('../../partials/header.ejs'); %>

<div class="wrapper">

  <!-- Navbar -->
  <%- include('../../partials/navbar.ejs'); %>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%- include('../../partials/sidebar.ejs'); %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Item</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- main content -->
    <div class="content">
      <div class="container-fluid">  
          <% if(action == 'view') { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-item" role="tab" aria-controls="home" aria-selected="true">Show Item</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#add-item" role="tab" aria-controls="profile" aria-selected="false">Add Item</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
              <%- include('show_table_item.ejs'); %>
            </div>
            <div class="tab-pane fade" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
              <%- include('add_item.ejs') %>
            </div>
          </div>
          <% } else if(action == 'show image') { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-image" role="tab" aria-controls="home" aria-selected="true">Show Image</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="show-image" role="tabpanel" aria-labelledby="home-tab">
                <%- include('show_image_item.ejs'); %>
              </div>
            </div>
          <% } else { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#edit-item" role="tab" aria-controls="home" aria-selected="true">Edit Item</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="home-tab">
                <%- include('edit_item.ejs'); %>
              </div>
            </div>
          <% } %>
        </div>
        
    </div>  
    <!-- /.content-header -->
  </div>
  <!-- /.content-wrapper -->


  <!-- Main Footer -->
  <%- include('../../partials/footer.ejs'); %>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->
 <%- include('../../partials/js.ejs'); %>

 <script>
   CKEDITOR.replace('about');
 </script>
