<!-- main content -->
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col d-flex">
                       <h3 class="card-title align-self-center">
                           Tabel Booking
                       </h3>
                    </div>
                    <div class="col text-right">
                        <!-- !-- Button trigger modal --> 
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            <i class="fas fa-plus"></i>
                          </button>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive">
                <table class="table table-striped" id="datatable">
                    <thead>
                        <th>No</th>
                        <th>Invoice</th>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Name Member</th>
                        <th>Status</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                       <% for(let i = 0; i < booking.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td>#<%= booking[i].invoice %></td>
                                <td>
                                    <%= booking[i].bookingStartDate.toLocaleString().split(',')[0] %> 
                                     s/d
                                    <%= booking[i].bookingEndDate.toLocaleString().split(',')[0] %>
                                </td>
                                <td><%= booking[i].itemId.title %></td>
                                <td>
                                    <%= booking[i].memberId.firstName %> 
                                    <%= booking[i].memberId.lastName %>
                                </td>
                                <td >
                                    <span class="badge badge-pill badge-<%= booking[i].payments.status == 'Proses' ? 'warning' : 'success' %>">
                                    <%= booking[i].payments.status  %>
                                    </span>
                                </td>
                                <td>
                                    <a href="/admin/booking/<%= booking[i].id %>" class="btn btn-sm btn-success"><i class="fas fa-eye"></i></a>
                                </td>
                            </tr>
                       <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>